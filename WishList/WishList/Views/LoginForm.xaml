<UserControl x:Class="WishList.Views.LoginForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:services="clr-namespace:WishList.Services"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30">
        <StackPanel>
            <!-- Логотип -->
            <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                <Border Background="{StaticResource AccentBrush}" 
                        Width="60" Height="60" 
                        CornerRadius="10"
                        Margin="0,0,0,15">
                    <TextBlock Text="🔐" 
                              Style="{StaticResource IconTextStyle}"
                              Foreground="White"/>
                </Border>
                <TextBlock Text="Добро пожаловать"
                          Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Войдите в свой аккаунт"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,5"/>
            </StackPanel>

            <!-- Поля ввода -->
            <StackPanel>
                <TextBlock Text="Email"
                          Style="{StaticResource SubtitleTextStyle}"/>

                <TextBox x:Name="UsernameTextBox"
                         Style="{StaticResource ModernTextBox}"
                         Tag="Введите ваш email"
                         Height="45"
                         FontSize="14"
                         Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                <TextBlock Text="Пароль"
                          Style="{StaticResource SubtitleTextStyle}"
                          Margin="0,15,0,0"/>

                <!-- Password TextBox со встроенным переключателем -->
                <TextBox Style="{StaticResource ModernPasswordTextBox}"
                         Text="{Binding DisplayPassword, UpdateSourceTrigger=PropertyChanged}"
                         services:TextBoxBehavior.MonitorText="True"/>


                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Style="{StaticResource ErrorTextStyle}"
                          Margin="0,10"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Индикатор загрузки -->
                <ProgressBar Style="{StaticResource ModernProgressBar}"
                            IsIndeterminate="True"
                            Margin="0,10"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Кнопка входа -->
                <Button Content="ВОЙТИ"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource ModernButton}"
                        Height="45"
                        FontSize="14"
                        Margin="0,20,0,10"/>

                <!-- Тестовые данные -->
                <TextBlock Text="Тестовые данные: admin@company.com / Password123!"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          FontSize="10"
                          HorizontalAlignment="Center"
                          Margin="0,10"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>