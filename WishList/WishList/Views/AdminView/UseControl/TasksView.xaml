<UserControl x:Class="WishList.Views.AdminView.UseControl.TasksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WishList.Views.AdminView.UseControl"
             xmlns:behaviors="clr-namespace:WishList.Services.Admin" 
             xmlns:local1="clr-namespace:WishList.Data.Convertes.Admin"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
       

        <!-- DataTemplate для элементов с CheckBox -->
        <DataTemplate x:Key="CheckBoxItemTemplate">
            <Border Background="Transparent" 
            HorizontalAlignment="Stretch">
                <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"
                  VerticalAlignment="Center"
                  HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding Name}" 
                       VerticalAlignment="Center"
                       Margin="2,0"/>
                </CheckBox>
            </Border>
        </DataTemplate>
        <!-- Converter для отображения выбранных элементов -->
        <local1:SelectedItemsConverter x:Key="SelectedItemsConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Toolbar -->
        <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" 
                Padding="20,15" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1" CornerRadius="8,8,0,0">
            <StackPanel Orientation="Horizontal">
                <Button Content="➕ Добавить заказ" 
                        Command="{Binding AddTaskCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="{StaticResource SuccessBrush}"
                        Margin="0,0,10,0"/>

                <Button Content="✏️ Редактировать" 
                        Command="{Binding EditTaskCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="{StaticResource AccentBrush}"
                        Margin="0,0,10,0"/>

                <Button Content="🗑️ Удалить" 
                        Command="{Binding DeleteTaskCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="{StaticResource ErrorBrush}"
                        Margin="0,0,20,0"/>

                <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource ModernTextBox}"
                         Width="300" 
                         Tag="🔍 Поиск задач..."
                         FontSize="12"/>

                <Button Content="🔄 Обновить" 
                        Command="{Binding LoadTasksCommand}"
                        Style="{StaticResource ModernButton}" 
                        Background="{StaticResource WarningBrush}"
                        Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filters Panel -->
        <Border Grid.Row="1" Background="{StaticResource SecondaryBrush}" 
                Padding="15,10" BorderBrush="{StaticResource BorderBrush}" 
                BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Первая строка фильтров -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                    <!-- Status Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="Статус:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>
                        <Grid Width="140">
                            <ComboBox ItemsSource="{Binding SelectableStatuses}"
                                      ItemTemplate="{StaticResource CheckBoxItemTemplate}"
                                      Style="{StaticResource ModernComboBox}"
                                      Text="{Binding SelectedStatusesText}"
                                      IsEditable="True"
                                      IsReadOnly="True">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <TextBlock Text="{Binding SelectedStatusesText}"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Priority Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="Приоритет:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>
                        <Grid Width="120">
                            <ComboBox ItemsSource="{Binding SelectablePriorities}"
                                      ItemTemplate="{StaticResource CheckBoxItemTemplate}"
                                      Style="{StaticResource ModernComboBox}" 
                                      Text="{Binding SelectedPrioritiesText}"
                                      IsEditable="True"
                                      IsReadOnly="True">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <TextBlock Text="{Binding SelectedPrioritiesText}"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Manager Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="Менеджер:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>
                        <Grid Width="150">
                            <ComboBox ItemsSource="{Binding SelectableManagers}"
                                      ItemTemplate="{StaticResource CheckBoxItemTemplate}"
                                      Style="{StaticResource ModernComboBox}"
                                      Text="{Binding SelectedManagersText}"
                                      IsEditable="True"
                                      IsReadOnly="True">
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <TextBlock Text="{Binding SelectedManagersText}"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Client Filter -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,15,0">
                        <TextBlock Text="Клиент:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,5,0"
                                   Foreground="{StaticResource TextBrush}"
                                   FontWeight="SemiBold"/>   
                        <Grid Width="160">
                            <ComboBox ItemsSource="{Binding SelectableClients}"
                                      ItemTemplate="{StaticResource CheckBoxItemTemplate}"
                                      Style="{StaticResource ModernComboBox}"
                                      Text="{Binding SelectedClientsText}"
                                      IsEditable="True"
                                      IsReadOnly="True">   
                                <ComboBox.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel/>
                                    </ItemsPanelTemplate>
                                </ComboBox.ItemsPanel>
                            </ComboBox>
                            <TextBlock Text="{Binding SelectedClientsText}"
                                       IsHitTestVisible="False"
                                       VerticalAlignment="Center"
                                       Margin="15,0,0,0"
                                       Foreground="{StaticResource TextBrush}"/>
                        </Grid>
                    </StackPanel>

                    <!-- Clear Filters Button -->
                    <Button Content="❌ Очистить"
                            Command="{Binding ClearFiltersCommand}"
                            Style="{StaticResource ModernButton}"
                            Background="{StaticResource BorderBrush}"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            Padding="10,8"
                            FontSize="11"/>
                </StackPanel>

                <!-- Вторая строка - фильтр по датам -->
                <Border Grid.Row="1" Background="{StaticResource PrimaryBrush}" 
                        CornerRadius="6" Padding="15,10" BorderThickness="1" 
                        BorderBrush="{StaticResource BorderBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                                  Text="Срок выполнения:" 
                                  VerticalAlignment="Center" 
                                  Margin="0,0,15,0"
                                  Foreground="{StaticResource TextBrush}"
                                  FontWeight="SemiBold"/>

                        <!-- Range Slider -->
                        <Grid Grid.Column="1" VerticalAlignment="Center" Margin="0,0,15,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!-- TextBox для отображения выбранного диапазона -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,5">
                                <TextBox Text="{Binding FilterStartDate, StringFormat=dd.MM.yyyy, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Width="100"
                                         Tag="От"
                                         FontSize="11"
                                         Margin="0,0,10,0"/>
                                <TextBlock Text="—" 
                                          VerticalAlignment="Center" 
                                          Margin="0,0,10,0"
                                          Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBox Text="{Binding FilterEndDate, StringFormat=dd.MM.yyyy, UpdateSourceTrigger=PropertyChanged}"
                                         Style="{StaticResource ModernTextBox}"
                                         Width="100"
                                         Tag="До"
                                         FontSize="11"/>
                            </StackPanel>

                            <!-- Custom Range Slider -->
                            <Border Grid.Row="1" Background="{StaticResource BorderBrush}" 
                                    Height="6" CornerRadius="3" Margin="10,0">
                                <Grid>
                                    <!-- Track -->
                                    <Border x:Name="Track" 
                                            Background="{StaticResource BorderBrush}" 
                                            CornerRadius="3"/>

                                    <!-- Selected Range -->
                                    <Border x:Name="SelectedRange" 
                                            Background="{StaticResource AccentBrush}" 
                                            CornerRadius="3"
                                            HorizontalAlignment="Left"
                                            Margin="{Binding SelectedRangeMargin}"/>

                                    <!-- Thumbs -->
                                    <Thumb x:Name="StartThumb" 
                                           Width="12" 
                                           Height="12" 
                                           Background="{StaticResource AccentBrush}"
                                           Cursor="SizeWE"
                                           HorizontalAlignment="Left"
                                           Margin="{Binding StartThumbMargin}"
                                           behaviors:RangeSliderBehavior.StartThumbDragDeltaCommand="{Binding StartThumbDragDeltaCommand}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        BorderBrush="White"
                                                        BorderThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>

                                    <Thumb x:Name="EndThumb" 
                                           Width="12" 
                                           Height="12" 
                                           Background="{StaticResource AccentBrush}"
                                           Cursor="SizeWE"
                                           HorizontalAlignment="Left"
                                           Margin="{Binding EndThumbMargin}"
                                           behaviors:RangeSliderBehavior.EndThumbDragDeltaCommand="{Binding EndThumbDragDeltaCommand}">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="6"
                                                        BorderBrush="White"
                                                        BorderThickness="2"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- Date Quick Filters -->
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <Button Content="Сегодня" 
                                    Command="{Binding SetTodayFilterCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Background="Transparent"
                                    Foreground="{StaticResource AccentBrush}"
                                    Padding="8,5"
                                    FontSize="11"
                                    Margin="0,0,5,0"/>
                            <Button Content="Неделя" 
                                    Command="{Binding SetWeekFilterCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Background="Transparent"
                                    Foreground="{StaticResource AccentBrush}"
                                    Padding="8,5"
                                    FontSize="11"
                                    Margin="0,0,5,0"/>
                            <Button Content="Месяц" 
                                    Command="{Binding SetMonthFilterCommand}"
                                    Style="{StaticResource ModernButton}"
                                    Background="Transparent"
                                    Foreground="{StaticResource AccentBrush}"
                                    Padding="8,5"
                                    FontSize="11"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Tasks DataGrid -->
        <Border Grid.Row="2" Background="{StaticResource PrimaryBrush}" 
                CornerRadius="0,0,8,8" Padding="1">
            <DataGrid ItemsSource="{Binding TasksView}"
                      SelectedItem="{Binding SelectedTask}"
                      AutoGenerateColumns="False" 
                      IsReadOnly="True"
                      Background="Transparent"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      VerticalGridLinesBrush="{StaticResource BorderBrush}"
                      HorizontalGridLinesBrush="{StaticResource BorderBrush}"
                      ScrollViewer.CanContentScroll="True"
                      ScrollViewer.VerticalScrollBarVisibility="Auto">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="60"/>
                    <DataGridTextColumn Header="Заголовок" Binding="{Binding Title}" Width="250"/>
                    <DataGridTextColumn Header="Клиент" Binding="{Binding Client.CompanyName}" Width="180"/>
                    <DataGridTextColumn Header="Статус" Binding="{Binding Status.Name}" Width="120"/>
                    <DataGridTextColumn Header="Приоритет" Binding="{Binding Priority.Name}" Width="100"/>
                    <DataGridTextColumn Header="Создан" 
                                       Binding="{Binding CreatedDate, StringFormat=dd.MM.yyyy}" 
                                       Width="100"/>
                    <DataGridTextColumn Header="Срок" 
                                       Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}" 
                                       Width="100"/>
                    <DataGridTextColumn Header="Менеджер" 
                                       Binding="{Binding Manager.FirstName}" 
                                       Width="120"/>
                </DataGrid.Columns>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}"/>
                        <Setter Property="BorderThickness" Value="0,0,0,1"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SecondaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>