<UserControl x:Class="WishList.Views.RegisterForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:services="clr-namespace:WishList.Services"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="400">

    <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="30" >
        <StackPanel>
            <!-- Логотип -->
            <StackPanel Margin="0,0,0,25" HorizontalAlignment="Center">
                <Border Background="{StaticResource SuccessBrush}" 
                        Width="60" Height="60" 
                        CornerRadius="10"
                        Margin="0,0,0,15">
                    <TextBlock Text="👤" 
                              Style="{StaticResource IconTextStyle}"
                              Foreground="White"/>
                </Border>
                <TextBlock Text="Создать аккаунт"
                          Style="{StaticResource TitleTextStyle}"/>
                <TextBlock Text="Зарегистрируйтесь в системе"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          HorizontalAlignment="Center"
                          Margin="0,5"/>
            </StackPanel>

            <!-- Поля ввода -->
            <StackPanel>
                <!-- Имя и Фамилия в одной строке -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Имя"
                                  Style="{StaticResource SubtitleTextStyle}"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Tag="Введите имя"
                                 Height="45"
                                 FontSize="14"
                                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Фамилия"
                                  Style="{StaticResource SubtitleTextStyle}"/>
                        <TextBox Style="{StaticResource ModernTextBox}"
                                 Tag="Введите фамилию"
                                 Height="45"
                                 FontSize="14"
                                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>
                    </StackPanel>
                </Grid>

                <TextBlock Text="Email"
                          Style="{StaticResource SubtitleTextStyle}"
                          Margin="0,15,0,0"/>

                <TextBox Style="{StaticResource ModernTextBox}"
                         Tag="Введите ваш email"
                         Height="45"
                         FontSize="14"
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}"/>

                <!-- Пароль -->
                <TextBlock Text="Пароль"
                          Style="{StaticResource SubtitleTextStyle}"
                          Margin="0,15,0,0"/>

                <!-- Пароль -->
                <TextBox Style="{StaticResource ModernPasswordTextBox}"
Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}"
services:TextBoxBehavior.MonitorText="True"
Height="45"/>

                <!-- Подтверждение пароля -->
                <TextBlock Text="Подтверждение пароля"
                          Style="{StaticResource SubtitleTextStyle}"
                          Margin="0,15,0,0"/>

               

                <!-- Подтверждение пароля -->
                <TextBox Style="{StaticResource ModernPasswordTextBox}"
         Text="{Binding ConfirmPassword, UpdateSourceTrigger=PropertyChanged}"
         services:TextBoxBehavior.MonitorText="True"
         Height="45"/>

                <!-- Роль пользователя -->
                <TextBlock Text="Роль"
                          Style="{StaticResource SubtitleTextStyle}"
                          Margin="0,15,0,0"/>

                <ComboBox Style="{StaticResource ModernComboBox}"
                          ItemsSource="{Binding AvailableRoles}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          SelectedValue="{Binding SelectedRoleId}"
                          Height="45"/>

                <!-- Сообщение об ошибке -->
                <TextBlock Text="{Binding ErrorMessage}"
                          Style="{StaticResource ErrorTextStyle}"
                          Margin="0,10"
                          Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Сообщение об успехе -->
                <TextBlock Text="{Binding SuccessMessage}"
                          Foreground="{StaticResource SuccessBrush}"
                          FontSize="12"
                          TextWrapping="Wrap"
                          HorizontalAlignment="Center"
                          Margin="0,10"
                          Visibility="{Binding SuccessMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                <!-- Индикатор загрузки -->
                <ProgressBar Style="{StaticResource ModernProgressBar}"
                            IsIndeterminate="True"
                            Margin="0,10"
                            Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                <!-- Кнопка регистрации -->
                <Button Content="СОЗДАТЬ АККАУНТ"
                        Command="{Binding RegisterCommand}"
                        Style="{StaticResource ModernButton}"
                        Height="45"
                        FontSize="14"
                        Margin="0,20,0,10"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</UserControl>