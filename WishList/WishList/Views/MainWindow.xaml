<Window x:Class="WishList.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WishList"
        mc:Ignorable="d"
        Title="IT Company - Авторизация"
        Height="600"
        Width="500"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Window.InputBindings>
        <KeyBinding Key="Enter" Command="{Binding LoginCommand}" />
    </Window.InputBindings>

    <Border Background="{StaticResource BackgroundBrush}"
            CornerRadius="15"
            Margin="20"
            BorderBrush="{StaticResource BorderBrush}"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" Opacity="0.3"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Заголовок -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBrush}" CornerRadius="15,15,0,0" MouseDown="TitleBar_MouseDown">
                <Grid Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Авторизация"
                              Foreground="{StaticResource TextBrush}"
                              FontSize="18"
                              FontWeight="Bold"
                              VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="✕"
                            Background="Transparent"
                            Foreground="{StaticResource TextSecondaryBrush}"
                            BorderThickness="0"
                            Width="25" Height="25"
                            Click="CloseButton_Click"/>
                </Grid>
            </Border>

            <!-- Форма входа -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="30">
                <StackPanel>
                    <!-- Логотип -->
                    <StackPanel Margin="0,0,0,30" HorizontalAlignment="Center">
                        <Border Background="{StaticResource AccentBrush}" 
                                Width="60" Height="60" 
                                CornerRadius="10"
                                Margin="0,0,0,15">
                            <TextBlock Text="IT" 
                                      Foreground="White"
                                      FontWeight="Bold"
                                      FontSize="16"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="IT Company"
                                  Foreground="{StaticResource TextBrush}"
                                  FontSize="20"
                                  FontWeight="Bold"/>
                    </StackPanel>

                    <!-- Поля ввода -->
                    <StackPanel>
                        <TextBlock Text="Имя пользователя"
                                  Foreground="{StaticResource TextBrush}"
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Margin="0,0,0,5"/>

                        <TextBox x:Name="UsernameTextBox"
                                 Style="{StaticResource ModernTextBox}"
                                 Tag="Введите имя пользователя"
                                 Height="45"
                                 FontSize="14"
                                 Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"/>

                        <TextBlock Text="Пароль"
                                  Foreground="{StaticResource TextBrush}"
                                  FontSize="12"
                                  FontWeight="SemiBold"
                                  Margin="0,15,0,5"/>

                        <PasswordBox x:Name="PasswordBox"
                                     Style="{StaticResource ModernPasswordBox}"
                                     Height="45"
                                     FontSize="14"
                                     PasswordChanged="PasswordBox_PasswordChanged"/>

                        <!-- Сообщение об ошибке -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                  Foreground="{StaticResource ErrorBrush}"
                                  FontSize="12"
                                  TextWrapping="Wrap"
                                  Margin="0,10"
                                  Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"/>

                        <!-- Индикатор загрузки -->
                        <ProgressBar IsIndeterminate="True"
                                    Height="4"
                                    Margin="0,10"
                                    Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>

                        <!-- Кнопка входа -->
                        <Button Content="ВОЙТИ"
                                Command="{Binding LoginCommand}"
                                Style="{StaticResource ModernButton}"
                                Height="45"
                                FontSize="14"
                                Margin="0,20,0,10"/>

                        <!-- Тестовые данные -->
                        <TextBlock Text="Тестовые данные: admin / admin123"
                                  Foreground="{StaticResource TextSecondaryBrush}"
                                  FontSize="10"
                                  HorizontalAlignment="Center"
                                  Margin="0,10"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <!-- Футер -->
            <Border Grid.Row="2" Background="{StaticResource SecondaryBrush}" CornerRadius="0,0,15,15">
                <TextBlock Text="© 2025 IT Company"
                          Foreground="{StaticResource TextSecondaryBrush}"
                          FontSize="10"
                          HorizontalAlignment="Center"
                          Margin="10"/>
            </Border>
        </Grid>
    </Border>
</Window>
